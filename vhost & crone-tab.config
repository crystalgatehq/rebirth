sudo nano /etc/nginx/sites-available/rebirth.e-granary.com

server {
    listen 80;
    listen [::]:80;
    server_name rebirth.e-granary.com;

    root /var/www/html/rebirth/current/public;
    index index.php index.html;

    # Security headers
    add_header X-Content-Type-Options nosniff;
    add_header X-Frame-Options DENY;
    add_header X-XSS-Protection "1; mode=block";

    # Laravel routing
    location / {
        try_files $uri $uri/ /index.php?$query_string;
    }

    # PHP 8.4 FPM - Unix socket (matches www.conf)
    location ~ \.php$ {
        include fastcgi_params;
        fastcgi_param SCRIPT_FILENAME $realpath_root$fastcgi_script_name;
        fastcgi_param DOCUMENT_ROOT $realpath_root;

        fastcgi_pass unix:/run/php/php8.4-fpm.sock;

        fastcgi_split_path_info ^(.+\.php)(/.+)$;
        fastcgi_index index.php;
    }

    # Deny hidden files (except .well-known for Certbot)
    location ~ /\.(?!well-known).* {
        deny all;
    }

    # Deny .htaccess
    location ~ /\.ht {
        deny all;
    }

    # Cache static files
    location ~* \.(jpg|jpeg|png|gif|ico|css|js|woff2?|svg|ttf|eot|pdf)$ {
        expires 30d;
        add_header Cache-Control "public, immutable";
        access_log off;
    }
}

sudo ln -s /etc/nginx/sites-available/rebirth.e-granary.com  /etc/nginx/sites-enabled/

sudo nginx -t
sudo systemctl restart nginx

sudo apt install certbot python3-certbot-nginx -y
sudo certbot --nginx -d rebirth.e-granary.com

crontab -e

* * * * * cd /var/www/html/rebirth/current && /usr/bin/php8.4 artisan schedule:run >> /dev/null 2>&1